        <TextView android:textSize="12dp" android:textColor="@color/gary_" android:id="@+id/voucher_left_bottom" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="0dp" android:text="@string/life_order_base_list_item_left_bottom" android:layout_below="@+id/voucher_left_center" android:layout_alignLeft="@+id/voucher_item_name"/>
