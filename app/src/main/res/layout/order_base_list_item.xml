        <TextView android:textSize="12dp" android:textColor="@color/gary_" android:gravity="center_horizontal" android:id="@+id/voucher_item_order_flag_caption" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginRight="10dp" android:text="@string/life_order_base_list_item_order_flag" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
