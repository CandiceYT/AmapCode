<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:orientation="vertical" android:id="@+id/truck_detail_layout" android:background="#ffffff" android:layout_width="match_parent" android:layout_height="72dp">
    <RelativeLayout android:background="@drawable/navi_settings_parent_child_bg" android:paddingLeft="8dp" android:paddingRight="8dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:layout_marginBottom="6dp">
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/linear_car_info_main" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="horizontal" android:id="@+id/linear_car_plate_type" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.amap.bundle.drive.setting.quicknaviwidget.main.view.CarPlateTextView android:textSize="@dimen/quickautonavi_common_text_size" android:textColor="@color/f_c_3" android:id="@+id/truck_car_plate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/qa_setting_car_license_plate"/>
