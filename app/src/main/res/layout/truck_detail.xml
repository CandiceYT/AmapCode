            </LinearLayout>
            <TextView android:textSize="@dimen/quickautonavi_common_text_size" android:textColor="@color/f_c_3" android:ellipsize="end" android:id="@+id/truck_len_width_height" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/route_8dp" android:layout_marginRight="16dp" android:maxLines="1" android:singleLine="true"/>
        </LinearLayout>
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ns_item_step_forward" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>
