<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/blue" android:layout_width="match_parent" android:layout_height="@dimen/route_50dp">
        <Button android:id="@+id/btn_back" android:background="@drawable/title_bar_back" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:textSize="@dimen/route_16dp" android:textColor="@color/white" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="语音测试工具" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:textColor="#000000" android:id="@+id/editText" android:padding="5dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_margin="5dp" android:hint="请输入" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:background="@color/white" android:paddingLeft="@dimen/route_50dp" android:paddingRight="@dimen/route_50dp" android:layout_width="match_parent" android:layout_height="@dimen/route_50dp">
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <Button android:textColor="@color/black" android:id="@+id/btn_bus" android:background="@color/white" android:layout_width="match_parent" android:layout_height="0dp" android:text="@string/route_bus" android:layout_weight="1"/>
            <View android:id="@+id/line_bus" android:background="@color/blue" android:visibility="visible" android:layout_width="match_parent" android:layout_height="@dimen/route_2dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <Button android:textColor="@color/black" android:id="@+id/btn_foot" android:background="@color/white" android:layout_width="match_parent" android:layout_height="0dp" android:text="@string/route_foot" android:layout_weight="1"/>
            <View android:id="@+id/line_foot" android:background="@color/blue" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="@dimen/route_2dp"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="@color/black" android:layout_width="match_parent" android:layout_height="@dimen/route_1dp"/>
    <LinearLayout android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
        <ListView android:id="@+id/lv_voice_text" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="3"/>
        <View android:background="@color/black" android:layout_width="@dimen/route_1dp" android:layout_height="match_parent"/>
        <ListView android:id="@+id/lv_voice_code" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="2"/>
    </LinearLayout>
</LinearLayout>
