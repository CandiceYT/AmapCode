<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_gravity="bottom" android:orientation="vertical" android:background="@color/c_4" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/f_s_13" android:textColor="@color/f_c_3" android:gravity="center" android:layout_width="match_parent" android:layout_height="36dp" android:text="@string/add_photo"/>
        <View android:background="@color/c_2" android:layout_width="match_parent" android:layout_height="1px"/>
        <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="140dp">
            <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:id="@+id/llCamera" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageButton android:id="@+id/ibCamera" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/add_photo_camera_selector" android:contentDescription="@string/add_photo_camera"/>
                <TextView android:textSize="@dimen/f_s_14" android:textColor="@color/f_c_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/add_photo_camera"/>
            </LinearLayout>
            <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:id="@+id/llScreenshot" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageButton android:id="@+id/ibScreenshot" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/add_photo_screenshot_selector" android:contentDescription="@string/add_photo_screenshot"/>
                <TextView android:textSize="@dimen/f_s_14" android:textColor="@color/f_c_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/add_photo_screenshot"/>
            </LinearLayout>
            <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:id="@+id/llAlbum" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageButton android:id="@+id/ibAlbum" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/add_photo_album_selector" android:contentDescription="@string/add_photo_album"/>
                <TextView android:textSize="@dimen/f_s_14" android:textColor="@color/f_c_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/add_photo_album"/>
            </LinearLayout>
        </LinearLayout>
        <View android:background="@color/c_2" android:layout_width="match_parent" android:layout_height="1px"/>
        <Button android:textSize="@dimen/f_s_17" android:textColor="@color/f_c_6" android:gravity="center" android:id="@+id/btnCancel" android:background="@drawable/add_photo_cancel_selector" android:layout_width="match_parent" android:layout_height="44dp" android:text="@string/cancel"/>
    </LinearLayout>
</FrameLayout>
