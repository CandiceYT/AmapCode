<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@drawable/tmc_record_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <TextView android:gravity="right" android:id="@+id/txtTime" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <ImageView android:layout_gravity="center_horizontal" android:id="@+id/btnPlay" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="32dp" android:src="@drawable/taxi_audiorecord_play" android:contentDescription="@null"/>
        <View android:background="@color/gray_color" android:layout_width="match_parent" android:layout_height="1dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="200dp" android:layout_height="44dp">
            <Button android:textColor="@color/white" android:id="@+id/btPlaynCancel" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/cancel" android:layout_weight="1"/>
            <View android:background="@color/gray_color" android:layout_width="1dp" android:layout_height="match_parent"/>
            <Button android:textColor="@color/white" android:id="@+id/btnCommit" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/taxi_order_submit" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
