<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:id="@+id/vg_splash_container" android:background="@color/c_1" android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v4.view.ViewPager android:id="@+id/viewpager" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:id="@+id/userControlArea_layout" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <RelativeLayout android:id="@+id/title_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/f_s_24" android:textStyle="bold" android:textColor="@color/f_c_2" android:gravity="center_horizontal" android:id="@+id/title_textView" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginRight="40dp" android:text="主标题不能为空" android:singleLine="true" android:maxLength="10"/>
            <TextView android:textSize="@dimen/f_s_16" android:textColor="@color/f_c_2" android:gravity="center_horizontal" android:id="@+id/subTitle_textView" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="子标题不能为空" android:singleLine="true" android:maxLength="15" android:layout_below="@+id/title_textView"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/pos_points_layout" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_below="@+id/title_layout" android:layout_centerHorizontal="true" android:layout_alignWithParentIfMissing="true">
            <View android:background="@drawable/guide_pos_points" android:visibility="invisible" android:layout_width="@dimen/guide_dot_width_6dp" android:layout_height="@dimen/guide_dot_width_6dp" android:layout_marginRight="8dp"/>
            <View android:background="@drawable/guide_pos_points" android:visibility="invisible" android:layout_width="@dimen/guide_dot_width_6dp" android:layout_height="@dimen/guide_dot_width_6dp" android:layout_marginRight="8dp"/>
            <View android:background="@drawable/guide_pos_points" android:visibility="invisible" android:layout_width="@dimen/guide_dot_width_6dp" android:layout_height="@dimen/guide_dot_width_6dp"/>
        </LinearLayout>
        <Button android:textSize="@dimen/f_s_18" android:textColor="@color/f_c_1" android:id="@+id/button_startMap" android:background="@drawable/guide_btn_selector_last" android:layout_width="match_parent" android:layout_height="48dp" android:layout_marginLeft="40dp" android:layout_marginTop="20dp" android:layout_marginRight="40dp" android:text="@string/enter_map" android:layout_below="@+id/pos_points_layout" android:layout_centerHorizontal="true" android:layout_alignWithParentIfMissing="true"/>
        <TextView android:textSize="@dimen/f_s_12" android:textColor="#757575" android:gravity="center_horizontal" android:id="@+id/bottomTitle_textView" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="本服务由xxx提供" android:singleLine="true" android:layout_below="@+id/button_startMap" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</RelativeLayout>
