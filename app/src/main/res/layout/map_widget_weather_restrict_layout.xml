<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:gravity="center" android:orientation="vertical" android:id="@+id/weather_restrict_container" android:layout_width="86dp" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/weather_container" android:visibility="gone" android:layout_width="76dp" android:layout_height="20dp">
        <ImageView android:id="@+id/weather_icon" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginRight="2dp"/>
        <com.autonavi.map.widget.StrokeTextView android:textSize="13dp" android:textColor="#8f000000" android:gravity="center" android:id="@+id/weather_temperature_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="18°"/>
    </LinearLayout>
    <ImageView android:gravity="center_horizontal" android:id="@+id/cut_line_view" android:visibility="gone" android:layout_width="60dp" android:layout_height="0.5dp" android:layout_marginTop="3dp" android:layout_marginBottom="3dp" android:src="@drawable/map_widget_restrict_cut_line"/>
    <LinearLayout android:gravity="center" android:id="@+id/restrict_info_container" android:visibility="gone" android:layout_width="76dp" android:layout_height="wrap_content">
        <TextView android:textSize="12dp" android:textColor="#8f000000" android:gravity="center" android:id="@+id/restrict_num_label" android:layout_width="wrap_content" android:layout_height="18dp" android:text="38"/>
        <com.autonavi.map.widget.StrokeTextView android:textSize="12dp" android:textColor="#8f000000" android:gravity="center" android:id="@+id/restrict_label" android:layout_width="wrap_content" android:layout_height="18dp" android:text="限行"/>
    </LinearLayout>
</LinearLayout>
