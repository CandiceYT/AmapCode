<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:orientation="vertical" android:background="#80000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/content_banner" android:layout_width="wrap_content" android:layout_height="184dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
    <RelativeLayout android:id="@+id/dialog_content" android:background="#ffffff" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="180dp" android:layout_above="@+id/confirm" android:layout_alignParentTop="true" android:layout_centerHorizontal="true">
        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true">
            <ImageView android:id="@+id/icon1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/bluetooth_connection_limition_icon" android:layout_centerHorizontal="true"/>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/textview1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:layout_below="@+id/icon1">
                <TextView android:textSize="17dp" android:textColor="@color/f_c_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/non_connection"/>
                <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView android:textSize="13dp" android:textColor="@color/f_c_2" android:id="@+id/sub_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/non_connection2"/>
                    <TextView android:textSize="13dp" android:textColor="@color/f_c_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="@string/non_connection_detail1"/>
                    <TextView android:textSize="13dp" android:textColor="@color/f_c_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:text="@string/non_connection_detail2"/>
                    <TextView android:textSize="13dp" android:textColor="@color/f_c_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="18dp" android:text="@string/non_connection_detail3"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/confirm" android:background="@color/bg_a" android:layout_width="match_parent" android:layout_height="64dp" android:layout_alignParentBottom="true">
        <TextView android:textSize="15dp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/auto_confirm" android:background="@drawable/auto_button_blue_corner_background" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="20dp" android:text="@string/auto_sure" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>
