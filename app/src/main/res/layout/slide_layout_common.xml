<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:orientation="vertical" android:background="@color/white" android:clickable="true" android:layout_width="@dimen/main_drawer_width" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/map_setting_bottom" android:background="@color/c_1" android:clickable="true" android:layout_width="match_parent" android:layout_height="48dp" android:layout_alignParentBottom="true">
        <View android:id="@+id/btn_map_setting" android:background="@drawable/enter_ic" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginRight="7dp" android:layout_alignTop="@+id/tv_map_setting" android:layout_alignParentRight="true"/>
        <TextView android:textSize="14dp" android:textColor="@color/f_c_2" android:gravity="center" android:id="@+id/tv_map_setting" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="13dp" android:text="@string/main_drawer_title_setting" android:drawableLeft="@drawable/map_setting_ic" android:drawablePadding="10dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true" android:layout_marginStart="13dp" android:layout_alignParentStart="true"/>
        <ImageView android:id="@+id/iv_map_setting_red_point" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="33dp" android:layout_marginTop="10dp" android:src="@drawable/idle_info" android:layout_alignParentTop="true"/>
    </RelativeLayout>
    <View android:id="@+id/bg_shadow" android:background="@drawable/bg_drawer_bottom_shadow" android:layout_width="match_parent" android:layout_height="6dp" android:layout_above="@+id/map_setting_bottom"/>
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/bg_shadow" android:layout_alignParentTop="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="vertical" android:id="@+id/module_subject" android:layout_width="match_parent" android:layout_height="wrap_content">
                <com.autonavi.minimap.widget.ImmersiveTitleCompatRelativeLayout android:background="@color/c_14" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="@dimen/f_s_12" android:textColor="@color/f_c_3" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/textView4" android:paddingLeft="16dp" android:layout_width="match_parent" android:layout_height="@dimen/main_drawer_section_divider_height" android:text="@string/main_drawer_title_mode"/>
                </com.autonavi.minimap.widget.ImmersiveTitleCompatRelativeLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginTop="15dp" android:layout_marginRight="16dp" android:layout_marginBottom="4dp">
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <FrameLayout android:id="@+id/check_defaultmode_fl" android:layout_width="@dimen/main_drawer_mapmode_item_width" android:layout_height="@dimen/main_drawer_mapmode_item_height" android:layout_alignParentLeft="true">
                            <ImageView android:id="@+id/check_defaultmode" android:clickable="true" android:layout_width="match_parent" android:layout_height="match_parent" android:checked="true" android:src="@drawable/map_mode_normal" android:scaleType="fitXY" android:contentDescription="@string/map_layer_standard_map"/>
                            <ImageView android:id="@+id/check_defaultmode_check_iv" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/map_mode_selected_layer_new" android:scaleType="fitXY"/>
                        </FrameLayout>
                        <TextView android:textSize="12dp" android:textColor="@color/openlayer_item_text_color" android:gravity="center" android:id="@+id/tv_map_mode_normal_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/main_drawer_mapmode_item_text_margin_top" android:text="@string/map_layer_standard_map" android:layout_below="@+id/check_defaultmode_fl" android:layout_alignLeft="@+id/check_defaultmode_fl" android:layout_alignRight="@+id/check_defaultmode_fl"/>
                    </RelativeLayout>
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp">
                        <TextView android:textSize="12dp" android:textColor="@color/openlayer_item_text_color" android:gravity="center" android:id="@+id/tv_map_mode_satellite_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/main_drawer_mapmode_item_text_margin_top" android:text="@string/map_layer_satellite_map" android:layout_below="@+id/check_satellitemode" android:layout_alignLeft="@+id/check_satellitemode" android:layout_alignRight="@+id/check_satellitemode"/>
                        <ImageView android:id="@+id/check_satellitemode" android:clickable="true" android:layout_width="@dimen/main_drawer_mapmode_item_width" android:layout_height="@dimen/main_drawer_mapmode_item_height" android:src="@drawable/map_mode_satellite_selector_new" android:scaleType="fitXY" android:adjustViewBounds="true" android:maxWidth="120dp" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" android:contentDescription="@string/map_layer_satellite_map" android:layout_alignParentStart="true"/>
                    </RelativeLayout>
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <ImageView android:id="@+id/check_busmode" android:clickable="true" android:layout_width="@dimen/main_drawer_mapmode_item_width" android:layout_height="@dimen/main_drawer_mapmode_item_height" android:src="@drawable/map_mode_bus_selector_new" android:scaleType="fitXY" android:contentDescription="@string/map_layer_bus_map"/>
                        <TextView android:textSize="12dp" android:textColor="@color/openlayer_item_text_color" android:gravity="center" android:id="@+id/tv_map_mode_bus_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/main_drawer_mapmode_item_text_margin_top" android:text="@string/map_layer_bus_map" android:layout_below="@+id/check_busmode" android:layout_alignLeft="@+id/check_busmode" android:layout_alignRight="@+id/check_busmode"/>
                    </RelativeLayout>
                </LinearLayout>
                <com.autonavi.map.core.view.Real3DSwitchView android:id="@+id/viewReal3DSwitch" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="16dp" android:layout_marginRight="16dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/module_event" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/f_s_12" android:textColor="@color/f_c_3" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/textView5" android:background="@color/c_14" android:paddingLeft="16dp" android:layout_width="match_parent" android:layout_height="@dimen/main_drawer_section_divider_height" android:layout_marginTop="10dp" android:text="@string/main_drawer_title_event"/>
                <com.autonavi.map.core.view.FlexBoxLayout android:id="@+id/event_container" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="match_parent">
                    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/linear_traffic_condition" android:paddingLeft="@dimen/main_drawer_event_item_margin_hor" android:paddingRight="@dimen/main_drawer_event_item_margin_hor" android:layout_width="wrap_content" android:layout_height="match_parent">
                        <ToggleButton android:id="@+id/tb_traffic_condition" android:background="@drawable/traffic_condition_selector" android:clickable="false" android:layout_width="56dp" android:layout_height="56dp" android:checked="false" android:textOn="" android:textOff="" android:contentDescription="@string/main_drawer_event_item_traffic_condition_name"/>
                        <TextView android:textSize="@dimen/f_s_12" android:textColor="@color/f_c_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/main_drawer_event_item_text_margin_top" android:text="@string/main_drawer_event_item_traffic_condition_name"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/linear_traffic_accident" android:paddingLeft="@dimen/main_drawer_event_item_margin_hor" android:paddingRight="@dimen/main_drawer_event_item_margin_hor" android:layout_width="wrap_content" android:layout_height="match_parent">
                        <ToggleButton android:id="@+id/tb_traffic_accident" android:background="@drawable/traffic_accident_selector" android:clickable="false" android:layout_width="56dp" android:layout_height="56dp" android:checked="false" android:textOn="" android:textOff="" android:contentDescription="@string/main_drawer_event_item_busradar_name"/>
                        <TextView android:textSize="@dimen/f_s_12" android:textColor="@color/f_c_2" android:id="@+id/textView6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/main_drawer_event_item_text_margin_top" android:text="@string/main_drawer_event_item_busradar_name"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/linear_my_collection" android:paddingLeft="@dimen/main_drawer_event_item_margin_hor" android:paddingRight="@dimen/main_drawer_event_item_margin_hor" android:layout_width="wrap_content" android:layout_height="match_parent">
                        <ToggleButton android:id="@+id/tb_my_collection" android:background="@drawable/my_collection_selector" android:clickable="false" android:layout_width="56dp" android:layout_height="56dp" android:checked="false" android:textOn="" android:textOff="" android:contentDescription="@string/main_drawer_event_item_fav_name"/>
                        <TextView android:textSize="@dimen/f_s_12" android:textColor="@color/f_c_2" android:id="@+id/textView7" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/main_drawer_event_item_text_margin_top" android:text="@string/main_drawer_event_item_fav_name"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/linear_scenic" android:paddingLeft="@dimen/main_drawer_event_item_margin_hor" android:paddingRight="@dimen/main_drawer_event_item_margin_hor" android:layout_width="wrap_content" android:layout_height="match_parent">
                        <ToggleButton android:id="@+id/tb_scenic" android:background="@drawable/maplayer_scenic_selector" android:clickable="false" android:layout_width="56dp" android:layout_height="56dp" android:checked="false" android:textOn="" android:textOff="" android:contentDescription="@string/main_drawer_event_item_scenic_name"/>
                        <TextView android:textSize="@dimen/f_s_12" android:textColor="@color/f_c_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/main_drawer_event_item_text_margin_top" android:text="@string/main_drawer_event_item_scenic_name"/>
                    </LinearLayout>
                    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/linear_bus_radar" android:paddingLeft="@dimen/main_drawer_event_item_margin_hor" android:paddingRight="@dimen/main_drawer_event_item_margin_hor" android:layout_width="wrap_content" android:layout_height="match_parent">
                        <ToggleButton android:id="@+id/tb_bus_radar" android:background="@drawable/bus_radar_selector" android:clickable="false" android:layout_width="56dp" android:layout_height="56dp" android:checked="false" android:textOn="" android:textOff="" android:contentDescription="@string/main_drawer_event_item_traffic_name"/>
                        <TextView android:textSize="@dimen/f_s_12" android:textColor="@color/f_c_2" android:id="@+id/textView8" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/main_drawer_event_item_text_margin_top" android:text="@string/main_drawer_event_item_traffic_name"/>
                    </LinearLayout>
                </com.autonavi.map.core.view.FlexBoxLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/module_others" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:textSize="@dimen/f_s_12" android:textColor="@color/f_c_3" android:gravity="left|center_vertical|center_horizontal|center" android:id="@+id/textView9" android:background="@color/c_14" android:paddingLeft="16dp" android:layout_width="match_parent" android:layout_height="@dimen/main_drawer_section_divider_height" android:text="@string/main_drawer_title_other"/>
                <com.autonavi.map.widget.LinearListView android:id="@+id/linear_others" android:paddingTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout android:gravity="center_horizontal" android:layout_gravity="bottom" android:id="@+id/home_page_ab_switch_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:layout_above="@+id/bg_shadow">
        <TextView android:textSize="@dimen/f_s_14" android:textColor="@color/f_c_2" android:id="@+id/ab_switch_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="22dp" android:text="体验新版" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <com.autonavi.widget.ui.AmapSwitch android:layout_gravity="center_vertical" android:id="@+id/home_page_ab_switch" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:checked="false" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
