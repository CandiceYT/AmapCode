<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/custom_progress_icon" android:layout_width="45dp" android:layout_height="45dp" android:layout_margin="5dp" android:src="@drawable/ic_launcher" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toRightOf="@+id/custom_progress_icon" android:layout_centerVertical="true">
        <TextView android:ellipsize="end" android:id="@+id/tv_custom_progress_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" style="@style/NotificationTitle"/>
        <TextView android:ellipsize="end" android:id="@+id/desc" android:paddingLeft="6dp" android:paddingTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:layout_below="@+id/tv_custom_progress_title" style="@style/NotificationText"/>
    </RelativeLayout>
</RelativeLayout>
