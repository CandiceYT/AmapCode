<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:background="#010000" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.autonavi.widget.ui.LoadingViewBL android:layout_gravity="center" android:id="@+id/image_detail_loading_view" android:layout_width="wrap_content" android:layout_height="wrap_content" app:loadingType="4"/>
    <com.autonavi.widget.photoview.PhotoView android:id="@+id/imageDetailPhoto" android:layout_width="match_parent" android:layout_height="match_parent"/>
    <RelativeLayout android:layout_gravity="bottom|left|center_vertical|center_horizontal|center" android:background="@color/bg_color_transparent" android:layout_width="match_parent" android:layout_height="65dp" android:layout_marginLeft="15dp" android:layout_marginRight="19dp" android:layout_marginBottom="18dp">
        <LinearLayout android:id="@+id/image_recommend_ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true">
            <LinearLayout android:id="@+id/left_bottom_text" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageView android:id="@+id/ImageRecommendImg" android:paddingTop="2dp" android:layout_width="12dp" android:layout_height="12dp" android:layout_marginRight="10dp" android:src="@drawable/common_food_recommend"/>
                <TextView android:textSize="13dp" android:textColor="@color/text_color_white" android:ellipsize="end" android:id="@+id/ImageRecommend" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="5dp" android:text="115人推荐" android:singleLine="true"/>
            </LinearLayout>
            <TextView android:textSize="13dp" android:textColor="@color/text_color_white" android:ellipsize="end" android:gravity="right" android:id="@+id/image_source" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:singleLine="true" android:layout_weight="1"/>
        </LinearLayout>
        <TextView android:textSize="18dp" android:textColor="@color/text_color_white" android:ellipsize="end" android:id="@+id/ImageDetailTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Title" android:maxEms="8" android:singleLine="true" android:layout_above="@+id/image_recommend_ll" android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
        <TextView android:textSize="18dp" android:textColor="@color/text_color_white" android:id="@+id/ImageDetailMessage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="Message" android:singleLine="true" android:layout_toRightOf="@+id/ImageDetailTitle" android:layout_alignTop="@+id/ImageDetailTitle"/>
        <TextView android:textSize="18dp" android:textColor="@color/text_color_white" android:id="@+id/ImageDetailNumber" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="23/99" android:layout_alignTop="@+id/ImageDetailTitle" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</FrameLayout>
