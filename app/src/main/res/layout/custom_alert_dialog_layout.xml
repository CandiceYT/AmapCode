<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:orientation="vertical" android:padding="1dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minWidth="320dp">
    <RelativeLayout android:background="#000" android:paddingLeft="10dp" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="40dp">
        <TextView android:textSize="22dp" android:textColor="#fff" android:id="@+id/tv_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View android:background="#0000" android:layout_width="match_parent" android:layout_height="0.5dp"/>
    <RelativeLayout android:id="@+id/tv_request_tip_msg" android:background="#000" android:padding="15dp" android:paddingLeft="12dp" android:paddingTop="15dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="40dp">
        <TextView android:textSize="18dp" android:textColor="#fff" android:gravity="center" android:id="@+id/message" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View android:background="#000000" android:layout_width="match_parent" android:layout_height="1dp"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:background="#aaa" android:padding="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="50dp">
        <Button android:textSize="14dp" android:gravity="center" android:id="@+id/negativeButton" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1"/>
        <Button android:textSize="14dp" android:gravity="center" android:id="@+id/positiveButton" android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
