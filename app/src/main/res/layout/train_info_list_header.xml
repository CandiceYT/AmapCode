<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:orientation="vertical" android:background="#f0f0f0" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:background="#5bade9" android:paddingTop="15dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="115dp">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="14dp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/start_station" android:layout_width="110dp" android:layout_height="wrap_content" android:text="@string/tt_train_start_station"/>
            <TextView android:textSize="12dp" android:textColor="#66ffffff" android:gravity="center" android:id="@+id/distance" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/tt_train_distance" android:layout_weight="1"/>
            <TextView android:textSize="14dp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/end_station" android:layout_width="110dp" android:layout_height="wrap_content" android:text="@string/tt_train_end_station"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
            <TextView android:textSize="25dp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/start_time" android:layout_width="110dp" android:layout_height="wrap_content" android:text="@string/tt_train_start_time"/>
            <LinearLayout android:gravity="center" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <ImageView android:background="#8cc5f0" android:layout_width="30dp" android:layout_height="1dp"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/train_info_title"/>
                <ImageView android:background="#8cc5f0" android:layout_width="30dp" android:layout_height="1dp"/>
            </LinearLayout>
            <TextView android:textSize="25dp" android:textColor="#ffffff" android:gravity="center" android:id="@+id/end_time" android:layout_width="110dp" android:layout_height="wrap_content" android:text="@string/tt_train_end_time"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
            <TextView android:textSize="12dp" android:textColor="#66ffffff" android:gravity="center" android:id="@+id/start_date" android:layout_width="110dp" android:layout_height="wrap_content" android:text="@string/tt_train_start_date"/>
            <TextView android:textSize="12dp" android:textColor="#66ffffff" android:gravity="center" android:id="@+id/running_time" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/tt_train_running_time" android:layout_weight="1"/>
            <TextView android:textSize="12dp" android:textColor="#66ffffff" android:gravity="center" android:id="@+id/end_date" android:layout_width="110dp" android:layout_height="wrap_content" android:text="@string/tt_train_start_date"/>
        </LinearLayout>
    </LinearLayout>
    <View android:background="#00000000" android:layout_width="match_parent" android:layout_height="10dp"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:background="#999999" android:layout_width="match_parent" android:layout_height="1px"/>
        <LinearLayout android:gravity="center" android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="80dp" android:layout_alignParentLeft="true">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/seat_1" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <TextView android:textSize="16dp" android:textColor="#ff6732" android:id="@+id/seat_price_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tt_train_seat_price"/>
                <TextView android:textSize="14dp" android:textColor="@color/f_c_2" android:id="@+id/seat_type_1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tt_seat_type_soft_couch"/>
            </LinearLayout>
            <View android:id="@+id/seat_divider_1" android:background="#e6e6e6" android:layout_width="1dp" android:layout_height="45dp"/>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/seat_2" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <TextView android:textSize="16dp" android:textColor="#ff6732" android:id="@+id/seat_price_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tt_train_seat_price"/>
                <TextView android:textSize="14dp" android:textColor="@color/f_c_2" android:id="@+id/seat_type_2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tt_seat_type_soft_couch"/>
            </LinearLayout>
            <View android:id="@+id/seat_divider_2" android:background="#e6e6e6" android:layout_width="1dp" android:layout_height="45dp"/>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/seat_3" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <TextView android:textSize="16dp" android:textColor="#ff6732" android:id="@+id/seat_price_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tt_train_seat_price"/>
                <TextView android:textSize="14dp" android:textColor="@color/f_c_2" android:id="@+id/seat_type_3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tt_seat_type_soft_couch"/>
            </LinearLayout>
            <View android:id="@+id/seat_divider_3" android:background="#e6e6e6" android:layout_width="1dp" android:layout_height="45dp"/>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/seat_4" android:paddingTop="20dp" android:paddingBottom="20dp" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
                <TextView android:textSize="16dp" android:textColor="#ff6732" android:id="@+id/seat_price_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tt_train_seat_price"/>
                <TextView android:textSize="14dp" android:textColor="@color/f_c_2" android:id="@+id/seat_type_4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/tt_seat_type_soft_couch"/>
            </LinearLayout>
        </LinearLayout>
        <View android:background="#999999" android:layout_width="match_parent" android:layout_height="1px"/>
    </LinearLayout>
    <View android:background="#00000000" android:layout_width="match_parent" android:layout_height="8dp"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:background="#999999" android:layout_width="match_parent" android:layout_height="1px"/>
        <LinearLayout android:orientation="horizontal" android:background="@color/white" android:layout_width="match_parent" android:layout_height="30dp">
            <TextView android:textSize="12dp" android:textColor="@color/f_c_3" android:gravity="center" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/tt_train_station" android:layout_weight="1.4"/>
            <TextView android:textSize="12dp" android:textColor="@color/f_c_3" android:gravity="center" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/tt_train_arrive" android:layout_weight="1"/>
            <TextView android:textSize="12dp" android:textColor="@color/f_c_3" android:gravity="center" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/tt_train_start" android:layout_weight="1"/>
            <TextView android:textSize="12dp" android:textColor="@color/f_c_3" android:gravity="center" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/tt_train_stay" android:layout_weight="1"/>
        </LinearLayout>
        <View android:background="#e6e6e6" android:layout_width="match_parent" android:layout_height="1px"/>
    </LinearLayout>
</LinearLayout>
