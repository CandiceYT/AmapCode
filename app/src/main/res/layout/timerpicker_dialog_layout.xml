<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:orientation="vertical" android:background="@drawable/v4_board_list_content_bg_selector" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="@dimen/timepicker_title_height">
        <TextView android:textSize="14dp" android:textColor="@color/f_c_6" android:id="@+id/btn_datetime_cancel" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/cancel" android:layout_centerVertical="true"/>
        <TextView android:textSize="14dp" android:textColor="@color/f_c_3" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/select_birthday" android:layout_centerInParent="true"/>
        <TextView android:textSize="14dp" android:textColor="@color/f_c_6" android:id="@+id/btn_datetime_sure" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/sure" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View android:id="@+id/mid_pos_divider" android:background="@color/default_font_color_c99" android:layout_width="match_parent" android:layout_height="0.5dp"/>
    <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:id="@+id/timePicker1" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:minWidth="240dp">
        <com.autonavi.map.widget.TimePickerWidgetView android:id="@+id/year" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2"/>
        <com.autonavi.map.widget.TimePickerWidgetView android:id="@+id/month" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <com.autonavi.map.widget.TimePickerWidgetView android:id="@+id/day" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
