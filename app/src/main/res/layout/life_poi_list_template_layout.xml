<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:id="@+id/life_main_layout" android:background="@drawable/v4_board_content_btn" android:paddingLeft="12dp" android:paddingTop="13dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/life_image_view" android:layout_width="80dp" android:layout_height="75dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp" android:scaleType="fitXY" android:contentDescription="@null"/>
    <LinearLayout android:orientation="horizontal" android:id="@+id/life_poi_icon_ll" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_alignParentRight="true">
        <ImageView android:id="@+id/life_poi_iv_1" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:src="@drawable/poi_group" android:scaleType="center" android:contentDescription="@null"/>
        <ImageView android:id="@+id/life_poi_iv_2" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:src="@drawable/poi_group" android:scaleType="center" android:contentDescription="@null"/>
        <ImageView android:id="@+id/life_poi_iv_3" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:src="@drawable/poi_group" android:scaleType="center" android:contentDescription="@null"/>
    </LinearLayout>
    <TextView android:textSize="16dp" android:textColor="@color/f_c_2" android:ellipsize="end" android:id="@+id/life_poi_name" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:singleLine="true" android:layout_toLeftOf="@+id/life_poi_icon_ll" android:layout_toRightOf="@+id/life_image_view"/>
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/life_poi_ratingbar_ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="9dp" android:layout_toRightOf="@+id/life_image_view" android:layout_below="@+id/life_poi_name">
        <TextView android:textSize="13dp" android:textColor="@color/f_c_3" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/life_poi_no_rating" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:text="@string/no_raing_for_now" android:singleLine="true"/>
        <RatingBar android:layout_gravity="center_vertical" android:id="@+id/life_rating_bar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:max="50" android:progress="35" android:numStars="5" android:stepSize="0.1" style="@style/RatingBar"/>
        <TextView android:textSize="13dp" android:textColor="@color/f_c_3" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/life_avgprice" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
    </LinearLayout>
    <TextView android:textSize="13dp" android:textColor="@color/f_c_3" android:ellipsize="end" android:id="@+id/life_distance" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:singleLine="true" android:layout_below="@+id/life_poi_ratingbar_ll" android:layout_alignParentRight="true"/>
    <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/life_poi_distance_ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_toLeftOf="@+id/life_distance" android:layout_toRightOf="@+id/life_image_view" android:layout_below="@+id/life_poi_ratingbar_ll" android:layout_alignWithParentIfMissing="true">
        <TextView android:textSize="13dp" android:textColor="@color/f_c_3" android:ellipsize="end" android:id="@+id/life_tag" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true"/>
        <TextView android:textSize="13dp" android:textColor="@color/f_c_3" android:ellipsize="end" android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@+id/business_area" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:singleLine="true"/>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/poi_iv_wlan" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:src="@drawable/poi_group" android:scaleType="center" android:singleLine="true" android:contentDescription="@null"/>
        <ImageView android:layout_gravity="center_vertical" android:id="@+id/poi_iv_park" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp" android:src="@drawable/poi_group" android:scaleType="center" android:singleLine="true" android:contentDescription="@null"/>
    </LinearLayout>
    <TextView android:textSize="13dp" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/life_poi_deepinfo_tv" android:background="#f9f9f9" android:padding="4dp" android:paddingLeft="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:singleLine="true" android:layout_below="@+id/life_image_view"/>
    <View android:background="@color/gray_lite" android:layout_width="match_parent" android:layout_height="1px" android:layout_below="@+id/life_poi_deepinfo_tv"/>
</RelativeLayout>
