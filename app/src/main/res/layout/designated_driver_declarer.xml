        <TextView android:id="@+id/designated_driver_declare" android:paddingLeft="13dp" android:paddingRight="13dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/Disclaimer" style="@style/confirm_dialog_text_style"/>
