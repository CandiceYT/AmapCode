            <ImageView android:id="@+id/eagle_map_bg_iv" android:background="@drawable/eagle_v_bg" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <ImageView android:id="@+id/eagle_map_iv" android:layout_width="65dp" android:layout_height="65dp" android:layout_marginRight="30dp" android:src="@drawable/eagle_icon" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
            <ImageView android:id="@+id/eagle_mapselected_iv" android:background="@drawable/eagle_setting_stroke_selected" android:layout_width="match_parent" android:layout_height="80dp"/>
