<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:background="@drawable/old_map_widget_bg" android:layout_width="match_parent" android:layout_height="48dp" android:layout_centerVertical="true">
    <RelativeLayout android:id="@+id/nearby_search_container" android:layout_width="110dp" android:layout_height="48dp" android:layout_marginLeft="8dp" android:layout_alignParentLeft="true" android:layout_centerVertical="true">
        <ImageView android:id="@+id/nearby_search_fresh" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/map_widget_nearby_search_icon" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <TextView android:textSize="16dp" android:textColor="#de000000" android:gravity="center" android:id="@+id/nearby_search_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:text="@string/map_widget_nearby_search_label" android:layout_toRightOf="@+id/nearby_search_fresh" android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout android:gravity="right" android:orientation="horizontal" android:id="@+id/attachment_msg_container" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="48dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
        <LinearLayout android:gravity="right" android:layout_gravity="right|center_vertical|center_horizontal|center" android:orientation="horizontal" android:id="@+id/weather_container" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="16dp" android:textColor="#de000000" android:gravity="right" android:layout_gravity="center_vertical" android:id="@+id/weather_temperature_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:text="18°"/>
            <ImageView android:id="@+id/weather_icon" android:layout_width="24dp" android:layout_height="24dp"/>
        </LinearLayout>
        <View android:layout_gravity="center_vertical" android:id="@+id/cut_line_view" android:background="#1a000000" android:layout_width="1dp" android:layout_height="14dp" android:layout_marginLeft="12dp" android:layout_marginRight="12dp"/>
        <TextView android:textSize="14dp" android:textColor="#de000000" android:gravity="right" android:layout_gravity="right|center_vertical|center_horizontal|center" android:id="@+id/restrict_label" android:paddingRight="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="今日38限行"/>
    </LinearLayout>
</RelativeLayout>
