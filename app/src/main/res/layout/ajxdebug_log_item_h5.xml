<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:background="#ffffff" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:background="#5500b1ff" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="15sp" android:textColor="#000000" android:gravity="center" android:id="@+id/debug_h5_clear" android:padding="8dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="清除日志" android:layout_weight="1"/>
            <TextView android:textSize="15sp" android:textColor="#000000" android:gravity="center" android:id="@+id/debug_h5_refresh" android:padding="8dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="刷新日志" android:layout_weight="1"/>
            <TextView android:textSize="15sp" android:textColor="#000000" android:gravity="center" android:id="@+id/debug_h5_alllog" android:padding="8dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="所有日志" android:layout_weight="1"/>
            <TextView android:textSize="15sp" android:textColor="#000000" android:gravity="center" android:id="@+id/debug_h5_delete" android:padding="8dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="删除下载" android:layout_weight="1"/>
        </LinearLayout>
        <TextView android:textColor="#000000" android:id="@+id/log_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="9dp" android:textIsSelectable="true"/>
    </LinearLayout>
</ScrollView>
