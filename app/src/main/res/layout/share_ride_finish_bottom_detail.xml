<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="28.5dp">
        <RelativeLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="@dimen/route_45dp" android:textColor="@color/f_c_6" android:gravity="center" android:id="@+id/run_distance" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <include layout="@layout/share_ride_fee_desc"/>
        </RelativeLayout>
        <RelativeLayout android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <include layout="@layout/share_ride_tip_fees"/>
            <View android:id="@+id/msg_cut_line" android:background="@color/c_26" android:visibility="gone" android:layout_width="@dimen/route_1px" android:layout_height="@dimen/route_11dp" android:layout_marginRight="@dimen/route_7dp" android:layout_toRightOf="@+id/tip_fees" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/f_s_13" android:textColor="@color/f_c_3" android:id="@+id/share_riding_fee_detail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="费用明细 " android:drawableRight="@drawable/arrow_right_sharebike" android:drawablePadding="2dp" android:layout_toRightOf="@+id/msg_cut_line"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:id="@+id/line_division" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/route_20dp"/>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/rainbow_flag" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/route_14dp" android:layout_marginRight="@dimen/route_14dp" android:layout_marginBottom="@dimen/route_17dp">
        <TextView android:textSize="@dimen/f_s_11" android:textColor="@color/rainbow_slow_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/running_finish_rainbow_slow"/>
        <View android:background="@drawable/route_ranibow" android:layout_width="0dp" android:layout_height="@dimen/route_2dp" android:layout_marginLeft="@dimen/route_7dp" android:layout_marginRight="@dimen/route_7dp" android:layout_weight="1"/>
        <TextView android:textSize="@dimen/f_s_11" android:textColor="@color/rainbow_fast_text_color" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/running_finish_rainbow_fast"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="10dp" android:layout_marginRight="10dp">
        <LinearLayout android:gravity="center" android:layout_gravity="center" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
            <TextView android:textSize="@dimen/f_s_24" android:textColor="@color/f_c_2" android:gravity="center" android:layout_gravity="center" android:id="@+id/run_time" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="" android:singleLine="true"/>
            <TextView android:textSize="@dimen/f_s_24" android:textColor="@color/f_c_2" android:gravity="center" android:layout_gravity="center" android:id="@+id/run_time_unit" android:layout_width="wrap_content" android:layout_height="match_parent" android:singleLine="true"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/f_s_24" android:textColor="@color/f_c_2" android:gravity="center" android:id="@+id/run_carlor" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
        <TextView android:textSize="@dimen/f_s_24" android:textColor="@color/f_c_2" android:gravity="center" android:id="@+id/run_speed" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="9dp" android:layout_marginRight="9dp" android:layout_marginBottom="@dimen/route_23dp">
        <TextView android:textSize="@dimen/f_s_13" android:textColor="@color/f_c_3" android:gravity="center" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginTop="@dimen/route_1dp" android:text="骑行时间" android:layout_weight="1"/>
        <TextView android:textSize="@dimen/f_s_13" android:textColor="@color/f_c_3" android:gravity="center" android:id="@+id/run_carlor_unit" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginTop="@dimen/route_1dp" android:text="骑行距离" android:layout_weight="1"/>
        <TextView android:textSize="@dimen/f_s_13" android:textColor="@color/f_c_3" android:gravity="center" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginTop="@dimen/route_1dp" android:text="减少碳排" android:layout_weight="1"/>
    </LinearLayout>
    <Button android:textSize="@dimen/f_s_16" android:textColor="@color/f_c_1" android:id="@+id/share_bike_finish_pay_bill" android:visibility="gone" android:layout_width="match_parent" android:layout_height="@dimen/route_50dp" android:layout_marginLeft="@dimen/route_16dp" android:layout_marginRight="@dimen/route_16dp" android:layout_marginBottom="@dimen/route_16dp" android:text="支付车费" style="@style/btn_a2"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/share_logo" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
        <View android:background="@color/c_2" android:layout_width="match_parent" android:layout_height="@dimen/route_1px" android:layout_marginLeft="@dimen/route_10dp" android:layout_marginRight="@dimen/route_10dp"/>
        <ImageView android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="@dimen/route_45dp" android:src="@drawable/route_amap_share_logo"/>
    </LinearLayout>
</merge>
