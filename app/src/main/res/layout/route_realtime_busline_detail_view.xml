<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:orientation="vertical" android:background="#eff1f3" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.autonavi.widget.ui.TitleBar android:id="@+id/title_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" app:title="@string/real_time_add_detail_title" app:title_style="5" app:action_text="@string/real_time_add_finish"/>
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:paddingTop="@dimen/route_14dp" android:paddingBottom="@dimen/route_12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/dp_32" android:textStyle="bold" android:textColor="@color/f_c_2" android:id="@+id/buline_name" android:paddingLeft="@dimen/route_15dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/demo_busname"/>
        <RelativeLayout android:paddingLeft="@dimen/route_15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/route_5dp">
            <ImageView android:id="@+id/btn_busline_return" android:clickable="true" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginRight="@dimen/route_16dp" android:src="@drawable/route_icon_busline_return" android:scaleType="center" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@string/route_reset_busline_fromto_msg"/>
            <TextView android:textSize="@dimen/dp_26" android:textColor="@color/f_c_2" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/txtStartEndStationName" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="@dimen/route_5dp" android:text="@string/demo_busline_stationname" android:singleLine="true" android:layout_toLeftOf="@+id/btn_busline_return" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:paddingLeft="@dimen/dp_30" android:paddingRight="18dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/route_2dp">
            <TextView android:textSize="@dimen/font_26" android:textColor="@color/black_lite" android:id="@+id/timeStart" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:text="@string/demo_busline_station_timestart" android:drawableLeft="@drawable/direction_result_first" android:drawablePadding="2dp"/>
            <TextView android:textSize="@dimen/font_26" android:textColor="@color/black_lite" android:id="@+id/timeEnd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:text="@string/demo_busline_station_timeend" android:drawableLeft="@drawable/direction_result_last" android:drawablePadding="2dp"/>
            <TextView android:textSize="@dimen/font_26" android:textColor="@color/black_lite" android:id="@+id/distance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:text="@string/demo_busline_station_distance"/>
            <TextView android:textSize="@dimen/font_26" android:textColor="@color/black_lite" android:id="@+id/price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/demo_busline_station_price"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/font_24" android:textColor="#b9b9b9" android:id="@+id/txtInterval" android:paddingLeft="@dimen/dp_30" android:paddingRight="18dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/route_6dp" android:text="@string/demo_busline_station_interval"/>
    </LinearLayout>
    <View android:background="@color/bg_ea" android:layout_width="match_parent" android:layout_height="@dimen/route_1px"/>
    <ListView android:id="@+id/realtime_bus_detail_list" android:paddingTop="@dimen/dp_20" android:paddingBottom="@dimen/dp_20" android:focusable="true" android:fadingEdgeLength="0dp" android:clipChildren="false" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@drawable/v3_list_bus_bg_selector" android:cacheColorHint="#00000000" android:divider="@null" android:dividerHeight="0dp"/>
</LinearLayout>
