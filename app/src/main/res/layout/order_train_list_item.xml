    <TextView android:textSize="14dp" android:textColor="@color/gary_" android:id="@+id/train_rank" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"/>
    <TextView android:textSize="@dimen/route_13dp" android:textColor="@color/f_c_1" android:gravity="center" android:id="@+id/train_status" android:background="@drawable/shape_round_corner_background_orange" android:layout_width="wrap_content" android:layout_height="18dp" android:text="@string/life_order_train_status_3" android:singleLine="true" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
    <TextView android:textSize="14dp" android:textColor="@color/gary_" android:id="@+id/ticket_num" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"/>
</RelativeLayout>
