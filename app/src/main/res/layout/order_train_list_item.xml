<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:orientation="vertical" android:background="@drawable/v4_board_list_content_bg_selector" android:paddingLeft="16dp" android:paddingTop="15dp" android:paddingRight="16dp" android:paddingBottom="15dp" android:layout_width="match_parent" android:layout_height="110dp">
    <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/f_c_2" android:id="@+id/train_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="@string/life_common_date"/>
    <TextView android:textSize="14dp" android:textColor="@color/f_c_2" android:gravity="center" android:padding="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/life_order_train_start" android:layout_toRightOf="@+id/train_date"/>
    <TextView android:textSize="16dp" android:textStyle="bold" android:textColor="@color/f_c_6" android:id="@+id/train_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/life_order_train_number" android:singleLine="true" android:layout_centerVertical="true"/>
