<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:background="@drawable/guide_background" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
        <TextView android:textSize="18dp" android:textColor="#ffffffff" android:ellipsize="end" android:id="@+id/content" android:padding="20dp" android:layout_width="0dp" android:layout_height="wrap_content" android:maxLines="3" android:singleLine="false" android:layout_weight="1" android:lineSpacingExtra="2dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="72dp" android:layout_height="match_parent" android:layout_weight="0">
            <View android:background="#33ffffff" android:layout_width="1px" android:layout_height="match_parent"/>
            <TextView android:textSize="16dp" android:textColor="#ff33bbff" android:gravity="center" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/ok_guide"/>
        </LinearLayout>
    </LinearLayout>
    <View android:layout_gravity="center" android:background="#99000000" android:layout_width="1dp" android:layout_height="18dp"/>
    <View android:layout_gravity="center" android:background="@drawable/guide_point" android:layout_width="5dp" android:layout_height="5dp"/>
</LinearLayout>
