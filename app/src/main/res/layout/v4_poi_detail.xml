<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:id="@+id/poi_detail" android:background="@drawable/bg_superfromto_item" android:layout_width="match_parent" android:layout_height="111dp">
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/poi_info_ll" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="1.5dp" android:layout_above="@+id/down_btn_ll" android:layout_alignParentTop="true">
        <TextView android:textSize="@dimen/default_font_size_t28" android:textColor="@color/f_c_6" android:id="@+id/detail_btn_toggle" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/default_margin_6A" android:layout_marginRight="12dp" android:text="@string/v4_poi_detail_btn_toggle" android:drawableRight="@drawable/tip_detail_btn_go" android:layout_alignParentRight="true"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/poi_info" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_toLeftOf="@+id/detail_btn_toggle" android:layout_alignParentLeft="true">
            <TextView android:textSize="@dimen/default_font_size_t32" android:textColor="#505153" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/text_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/v4_poi_detail_text_name" android:singleLine="true"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/child_station_ll" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="6dp">
                <TextView android:textSize="11dp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/station_num" android:background="@drawable/tip_station_flag_bg" android:paddingLeft="2dp" android:paddingRight="2dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="A"/>
                <TextView android:textSize="11dp" android:textStyle="bold" android:textColor="@color/f_c_6" android:gravity="center_vertical" android:id="@+id/station_txt" android:background="@drawable/tip_station_text_bg" android:paddingLeft="3dp" android:paddingRight="3dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="站台"/>
            </LinearLayout>
            <ImageView android:id="@+id/poi_iv_1" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:src="@drawable/poi_room" android:scaleType="center" android:singleLine="true" android:contentDescription="@null"/>
            <ImageView android:id="@+id/poi_iv_2" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:src="@drawable/poi_group" android:scaleType="center" android:singleLine="true" android:contentDescription="@null"/>
            <ImageView android:id="@+id/poi_iv_3" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:src="@drawable/poi_yikuaiqu_order" android:scaleType="center" android:singleLine="true" android:contentDescription="@null"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/rating_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_toLeftOf="@+id/detail_btn_toggle" android:layout_below="@+id/poi_info" android:layout_alignParentLeft="true">
            <RatingBar android:layout_gravity="center_vertical" android:id="@+id/rating_bar" android:paddingBottom="4dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_marginRight="12dp" android:max="50" android:progress="35" android:numStars="5" android:stepSize="0.1" style="@style/RatingBar"/>
            <TextView android:textSize="@dimen/default_font_size_t26" android:textColor="@color/f_c_3" android:ellipsize="marquee" android:id="@+id/avgprice" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/v4_poi_detail_price_per_person" android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/addr_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_toLeftOf="@+id/detail_btn_toggle" android:layout_below="@+id/rating_info">
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/logo" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/taobao_logo" android:contentDescription="@null"/>
            <TextView android:textSize="@dimen/default_font_size_t26" android:textColor="@color/list_small_txt_color" android:ellipsize="marquee" android:layout_gravity="center_vertical" android:id="@+id/distance" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:text="@string/v4_poi_detail_distance" android:singleLine="true"/>
            <View android:layout_gravity="center_vertical" android:id="@+id/divider" android:background="@color/past_bg" android:visibility="gone" android:layout_width="0.8dp" android:layout_height="15dp" android:layout_marginRight="8dp"/>
            <TextView android:textSize="@dimen/font_26" android:textColor="@color/list_small_txt_color" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/text_addr" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/v4_poi_detail_address" android:singleLine="true"/>
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/super_address_tip" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <com.autonavi.minimap.widget.SearchListColorBlockView android:id="@+id/super_addr_color_block" android:layout_width="match_parent" android:layout_height="20dp" android:layout_marginRight="10dp"/>
            </LinearLayout>
            <TextView android:textColor="#42a5ff" android:id="@+id/more_station_tv" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="..." android:singleLine="true"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/default_font_size_t24" android:textColor="@color/f_c_3" android:ellipsize="end" android:id="@+id/deepinfo" android:background="@drawable/poi_deal_bg" android:paddingLeft="8dp" android:paddingTop="6dp" android:paddingRight="8dp" android:paddingBottom="6dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginTop="3dp" android:layout_marginRight="12dp" android:text="@string/v4_poi_detail_more_info" android:singleLine="true" android:layout_below="@+id/addr_info" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <ImageView android:id="@+id/cms_divider" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:src="@drawable/divider_line" android:layout_above="@+id/down_btn_ll" android:contentDescription="@null"/>
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/down_btn_ll" android:layout_width="match_parent" android:layout_height="38dp" android:baselineAligned="false" android:layout_alignParentBottom="true">
        <com.autonavi.map.widget.DrawableCenterTextView android:textSize="@dimen/default_font_size_t24" android:textColor="@color/f_c_2" android:gravity="center_vertical" android:id="@+id/tv_fujin" android:background="@drawable/v4_common_idle_tap_selector" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/button_text_search_arround" android:drawableLeft="@drawable/tips_nearby" android:drawablePadding="4dp" android:layout_weight="1" android:contentDescription="@string/button_text_search_arround"/>
        <com.autonavi.map.widget.DrawableCenterTextView android:textSize="@dimen/default_font_size_t24" android:textColor="@color/f_c_2" android:gravity="center_vertical" android:id="@+id/tv_luxian" android:background="@drawable/v4_common_idle_tap_selector" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/button_text_route" android:drawableLeft="@drawable/tips_route" android:drawablePadding="4dp" android:layout_weight="1" android:contentDescription="@string/button_text_route"/>
        <com.autonavi.map.widget.DrawableCenterTextView android:textSize="@dimen/default_font_size_t24" android:textColor="@color/f_c_2" android:gravity="center_vertical" android:id="@+id/tv_navi" android:background="@drawable/v4_common_idle_tap_selector" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/button_text_navi" android:drawableLeft="@drawable/tips_navi" android:drawablePadding="4dp" android:layout_weight="1" android:contentDescription="@string/button_text_navi"/>
        <com.autonavi.map.widget.DrawableCenterTextView android:textSize="@dimen/default_font_size_t24" android:textColor="@color/f_c_2" android:gravity="center_vertical" android:id="@+id/tv_error" android:background="@drawable/v4_common_idle_tap_selector" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/button_text_error" android:drawableLeft="@drawable/funicon_error_tab" android:drawablePadding="4dp" android:layout_weight="1" android:contentDescription="@string/button_text_error"/>
        <com.autonavi.map.widget.DrawableCenterTextView android:textSize="@dimen/default_font_size_t24" android:textColor="@color/f_c_2" android:gravity="center_vertical" android:id="@+id/tv_indoor" android:background="@drawable/v4_common_idle_tap_selector" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/indoor_map" android:drawableLeft="@drawable/mbox_btn_indoor_icon" android:drawablePadding="4dp" android:layout_weight="1" android:contentDescription="@string/indoor_map"/>
    </LinearLayout>
</RelativeLayout>
