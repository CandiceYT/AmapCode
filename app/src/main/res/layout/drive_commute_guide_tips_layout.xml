<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/commute_tips_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_alignParentTop="true" android:layout_alignParentStart="true">
        <LinearLayout android:orientation="horizontal" android:id="@+id/commute_tips" android:background="@drawable/route_commute_tip_bg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:layout_marginRight="30dp" android:layout_alignParentBottom="true" android:layout_alignParentStart="true">
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/commute_tips_icon" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginLeft="16dp" android:layout_marginRight="9dp" android:src="@drawable/drive_commute_tips_home"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/home" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:layout_marginBottom="16dp" android:layout_weight="1">
                <TextView android:textSize="@dimen/f_s_16" android:textColor="@color/f_c_6" android:ellipsize="end" android:id="@+id/commute_tips_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="1" android:maxEms="10" android:includeFontPadding="false"/>
                <TextView android:textSize="@dimen/f_s_12" android:textColor="@color/f_c_2" android:ellipsize="end" android:id="@+id/commute_tips_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:maxLines="1" android:maxEms="12" android:includeFontPadding="false"/>
            </LinearLayout>
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/commute_tips_arr" android:layout_width="6dp" android:layout_height="11dp" android:layout_marginLeft="12dp" android:layout_marginRight="16dp" android:src="@drawable/route_commute_tip_arrow"/>
        </LinearLayout>
        <RelativeLayout android:id="@+id/commute_tips_close" android:layout_width="64dp" android:layout_height="64dp" android:layout_marginRight="-32dp" android:layout_alignRight="@+id/commute_tips" android:layout_alignParentTop="true" android:layout_alignEnd="@+id/commute_tips">
            <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/route_commute_tip_close" android:layout_centerInParent="true"/>
        </RelativeLayout>
    </RelativeLayout>
    <View android:layout_width="wrap_content" android:layout_height="10dp" android:layout_below="@+id/commute_tips_layout"/>
</RelativeLayout>
