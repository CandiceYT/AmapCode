<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:orientation="vertical" android:paddingLeft="10dp" android:paddingRight="10dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:layout_gravity="left|center_vertical|center_horizontal|center" android:orientation="vertical" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="14dp" android:textStyle="bold" android:textColor="#ffffffff" android:ellipsize="end" android:id="@+id/title" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxWidth="195dp" android:singleLine="true"/>
            <TextView android:textSize="11dp" android:textColor="#ffffffff" android:ellipsize="end" android:id="@+id/snippet" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:maxWidth="195dp"/>
        </LinearLayout>
        <ImageView android:id="@+id/open_navi" android:layout_width="50dp" android:layout_height="24dp" android:layout_marginLeft="6dp" android:layout_marginTop="10dp" android:src="@drawable/icon_open_route" android:scaleType="centerInside" android:contentDescription="@string/open_navi"/>
    </LinearLayout>
</LinearLayout>
