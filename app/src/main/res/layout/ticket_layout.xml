<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:background="@color/gary_frame" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/title_area" android:background="@drawable/common_bar_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true">
        <ImageButton android:layout_gravity="center_vertical" android:id="@+id/back" android:background="@drawable/title_bar_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:contentDescription="@string/ticket_layout_back_ib"/>
        <TextView android:textSize="@dimen/font_38" android:textColor="@color/f_c_2" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/order_ticket_title" android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ScrollView android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:layout_below="@+id/title_area">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:id="@+id/ticket_content_city" android:background="@drawable/bg_superfromto_item" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:baselineAligned="true">
                <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1">
                    <RelativeLayout android:id="@+id/ticket_leave_city" android:layout_width="match_parent" android:layout_height="52dp" android:layout_marginBottom="-2dp">
                        <TextView android:textSize="@dimen/font_30" android:textColor="@color/order_hotel_lable_color" android:id="@+id/ticket_leave_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/order_ticket_start" android:layout_centerVertical="true"/>
                        <TextView android:textSize="@dimen/font_32" android:textColor="@color/order_hotel_text_color" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/leave_city" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:singleLine="true" android:drawableRight="@drawable/more_setting" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:drawableEnd="@drawable/more_setting"/>
                        <TextView android:textSize="@dimen/font_40" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/leave_city_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="28dp" android:layout_toRightOf="@+id/ticket_leave_label" android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <ImageView android:id="@+id/divider" android:background="@drawable/common_line" android:focusable="false" android:drawingCacheQuality="auto" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="18dp" android:layout_below="@+id/ticket_leave_city" android:contentDescription="@null"/>
                    <RelativeLayout android:orientation="horizontal" android:id="@+id/ticket_arrive_city" android:layout_width="match_parent" android:layout_height="52dp" android:layout_below="@+id/divider">
                        <TextView android:textSize="@dimen/font_30" android:textColor="@color/order_hotel_lable_color" android:id="@+id/ticket_arrive_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/order_ticket_end" android:layout_centerVertical="true"/>
                        <TextView android:textSize="@dimen/font_32" android:textColor="@color/order_hotel_text_color" android:ellipsize="end" android:id="@+id/arrive_city" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:singleLine="true" android:drawableRight="@drawable/more_setting" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:drawableEnd="@drawable/more_setting"/>
                        <TextView android:textSize="@dimen/font_40" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/arrive_city_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="28dp" android:layout_toRightOf="@+id/ticket_arrive_label" android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout android:id="@+id/ticket_switch_city" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="4">
                    <ImageButton android:id="@+id/ticket_change_city" android:background="@drawable/directions_input_change" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout android:id="@+id/ticket_content_date" android:background="@drawable/bg_superfromto_item" android:layout_width="match_parent" android:layout_height="52dp" android:layout_marginTop="15dp" android:layout_below="@+id/ticket_content_city">
                <TextView android:textSize="@dimen/font_30" android:textColor="@color/order_hotel_lable_color" android:id="@+id/ticket_time_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/order_ticket_time" android:layout_centerVertical="true"/>
                <TextView android:textSize="@dimen/font_32" android:textColor="@color/order_hotel_text_color" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/start_date" android:paddingLeft="30dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="13dp" android:singleLine="true" android:drawableRight="@drawable/more_setting" android:layout_toRightOf="@+id/ticket_date_txt" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:drawableEnd="@drawable/more_setting"/>
                <TextView android:textSize="@dimen/font_40" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/ticket_date_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="28dp" android:layout_toRightOf="@+id/ticket_time_label" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/ticket_content_space" android:background="@drawable/bg_superfromto_item" android:layout_width="match_parent" android:layout_height="52dp" android:layout_marginTop="15dp" android:layout_below="@+id/ticket_content_date">
                <TextView android:textSize="@dimen/font_30" android:textColor="@color/order_hotel_lable_color" android:id="@+id/ticket_class_label" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/order_ticket_space" android:layout_centerVertical="true"/>
                <TextView android:textSize="@dimen/font_32" android:textColor="@color/order_hotel_text_color" android:ellipsize="end" android:gravity="center_vertical" android:id="@+id/ticket_seat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="13dp" android:singleLine="true" android:drawableRight="@drawable/more_setting" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:drawableEnd="@drawable/more_setting"/>
                <TextView android:textSize="@dimen/font_40" android:textStyle="bold" android:textColor="@color/black" android:id="@+id/ticket_seat_txt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="28dp" android:layout_toRightOf="@+id/ticket_class_label" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/ticket_content_space">
                <Button android:textSize="16dp" android:textColor="@color/white" android:id="@+id/search_btn" android:background="@drawable/button_only_one_blue_selector" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginLeft="12dp" android:layout_marginTop="12dp" android:layout_marginRight="12dp" android:text="@string/order_hotel_search"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
