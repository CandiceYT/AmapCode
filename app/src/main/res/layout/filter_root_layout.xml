<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/leftLL" android:background="#ffffff" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:id="@+id/left_title" android:background="@drawable/filter_layout_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:gravity="center" android:id="@+id/leftTxt" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/bussiness_area" style="@style/filter_btn_sub_text"/>
            <View android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/left_blue_line" android:background="@color/poidetail_dlg_right_btn_text_normal" android:layout_width="42dp" android:layout_height="3dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:baselineAligned="false">
            <ListView android:id="@+id/lv_main" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginRight="1px" android:cacheColorHint="#00000000" android:divider="@null" android:dividerHeight="0dp"/>
            <View android:layout_gravity="center" android:background="#d7d7d7" android:layout_width="1px" android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/rightLL" android:background="#ededed" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:id="@+id/right_title" android:background="@drawable/filter_layout_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:gravity="center" android:id="@+id/rightTxt" android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/subway_area" style="@style/filter_btn_sub_text"/>
            <View android:layout_gravity="bottom|center_vertical|center_horizontal|center" android:id="@+id/right_blue_line" android:background="@color/poidetail_dlg_right_btn_text_normal" android:layout_width="42dp" android:layout_height="3dp"/>
        </LinearLayout>
        <ListView android:id="@+id/lv_sub" android:layout_width="match_parent" android:layout_height="match_parent" android:cacheColorHint="#00000000" android:divider="@null" android:dividerHeight="0dp"/>
    </LinearLayout>
</LinearLayout>
