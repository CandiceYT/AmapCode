        <RelativeLayout android:gravity="center_vertical" android:id="@+id/btn_to_call_rl" android:background="@drawable/v4_common_idle_tap_selector" android:layout_width="0dp" android:layout_height="40dp" android:layout_weight="1">
            <Button android:textSize="@dimen/default_font_size_t28" android:textColor="@drawable/poi_list_call_btn_txt_color" android:gravity="center" android:id="@+id/btn_to_call" android:background="@null" android:focusable="false" android:clickable="false" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/button_text_phone" android:drawableLeft="@drawable/mbox_btn_call_icon" android:drawablePadding="4dp" android:layout_centerInParent="true"/>
