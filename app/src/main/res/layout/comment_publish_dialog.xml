        <View android:id="@+id/line" android:background="@color/comment_line" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="12dp" android:layout_marginRight="12dp"/>
        <TextView android:textSize="@dimen/font_34" android:textColor="@color/comment_highlight_bule" android:gravity="center" android:id="@+id/btn_cancle" android:layout_width="match_parent" android:layout_height="44dp" android:text="@string/cancel"/>
    </LinearLayout>
</RelativeLayout>
