<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:orientation="horizontal" android:background="#00000000" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/custom_callout_container" android:background="@drawable/dark_bg" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/custom_callout_left_layout" android:paddingTop="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="8dp">
            <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="@color/custom_callout_black_style_time_color" android:id="@+id/custom_callout_left_value" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="10sp" android:textColor="@color/custom_callout_black_style_time_unit_color" android:id="@+id/custom_callout_left_value_unit" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="-2dp" android:text="分钟"/>
        </LinearLayout>
        <View android:id="@+id/custom_callout_split_line" android:background="@color/custom_callout_black_style_split_color" android:paddingTop="1dp" android:layout_width="1dp" android:layout_height="22dp"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingTop="1dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp">
            <TextView android:textSize="14sp" android:ellipsize="end" android:id="@+id/custom_callout_right_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:maxLines="1"/>
            <com.alipay.mobile.antui.iconfont.AUIconView android:id="@+id/custom_callout_right_arrow" android:layout_width="14dp" android:layout_height="15dp" android:layout_marginLeft="5dp" android:layout_marginRight="2dp" xmlns:ns1="http://schemas.Android.com/apk/res-auto" ns1:iconfontColor="@color/custom_callout_black_style_arrow_color" xmlns:ns2="http://schemas.Android.com/apk/res-auto" ns2:iconfontUnicode="string/iconfont_right_arrow"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
