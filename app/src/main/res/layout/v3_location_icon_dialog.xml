<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:orientation="vertical" android:id="@+id/location_dialog_root" android:background="@drawable/gps_wifi_bg" android:layout_width="@dimen/location_icon_dialog_width" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/real_main_title" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/location_icon_dialog_textsize" android:textStyle="bold" android:textColor="@color/f_c_2" android:gravity="center" android:id="@+id/tv_location_dialog_title" android:paddingTop="@dimen/location_icon_dialog_padding_top" android:paddingBottom="@dimen/location_icon_dialog_padding_bottom" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/location_open_gps_title"/>
        <FrameLayout android:id="@+id/frame_dialog_close" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentRight="true">
            <ImageView android:id="@+id/img_dialog_close" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/btn_closed_selector"/>
        </FrameLayout>
    </RelativeLayout>
    <ImageView android:layout_gravity="center_horizontal" android:id="@+id/img_loation_dialog" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/location_icon_dialog_padding_bottom" android:src="@drawable/gps_icon"/>
    <TextView android:textSize="@dimen/location_icon_dialog_warn_textsize" android:textColor="@color/dialog_warning_color" android:id="@+id/tv_location_dialog_warning" android:paddingLeft="30dp" android:paddingRight="30dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/location_icon_dialog_padding_bottom" android:text="@string/location_gps_content"/>
    <TextView android:id="@+id/tv_location_dialog_line" android:background="@color/bg_j" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="3dp" android:layout_marginRight="3dp"/>
    <TextView android:textSize="@dimen/location_icon_dialog_textsize" android:textStyle="bold" android:textColor="@color/dialog_blue_txt_color" android:gravity="center" android:id="@+id/tv_location_dialog_turnon" android:background="@drawable/btn_open_selector" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="50dp" android:text="@string/location_turn_on"/>
</LinearLayout>
