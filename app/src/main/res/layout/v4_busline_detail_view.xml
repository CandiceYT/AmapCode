<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:orientation="vertical" android:background="#eff1f3" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.autonavi.widget.ui.TitleBar android:id="@+id/title_bar" android:layout_width="wrap_content" android:layout_height="wrap_content" app:title_style="5" app:action_text="@string/v4_btn_map"/>
    <LinearLayout android:orientation="vertical" android:background="@color/white" android:paddingTop="@dimen/route_12dp" android:paddingBottom="@dimen/route_12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <RelativeLayout android:gravity="center_vertical" android:paddingLeft="18dp" android:layout_width="match_parent" android:layout_height="30dp">
            <ImageView android:id="@+id/btn_busline_return" android:clickable="true" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginRight="@dimen/route_16dp" android:src="@drawable/route_icon_busline_return" android:scaleType="center" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:contentDescription="@string/route_reset_busline_fromto_msg"/>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_toLeftOf="@+id/btn_busline_return" android:layout_alignParentLeft="true">
                <TextView android:textSize="13dp" android:textColor="#ff6000" android:id="@+id/busline_result_detial_status_desc" android:background="@drawable/busline_result_status_bkg_nine" android:paddingLeft="5dp" android:paddingRight="5dp" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="4dp" android:text="@string/busline_result_status_outage" android:singleLine="true"/>
                <TextView android:textSize="@dimen/font_32" android:textColor="@color/f_c_2" android:ellipsize="end" android:id="@+id/txtStartEndStationName" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/demo_busline_stationname" android:singleLine="true"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout android:orientation="horizontal" android:paddingLeft="18dp" android:paddingRight="18dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/route_2dp" android:layout_marginBottom="@dimen/route_3dp">
            <TextView android:textSize="@dimen/font_26" android:textColor="@color/black_lite" android:gravity="center_vertical" android:id="@+id/timeStart" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:text="@string/demo_busline_station_timestart" android:drawableLeft="@drawable/direction_result_first" android:drawablePadding="2dp"/>
            <TextView android:textSize="@dimen/font_26" android:textColor="@color/black_lite" android:gravity="center_vertical" android:id="@+id/timeEnd" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:text="@string/demo_busline_station_timeend" android:drawableLeft="@drawable/direction_result_last" android:drawablePadding="2dp"/>
            <TextView android:textSize="@dimen/font_26" android:textColor="@color/f_c_2" android:gravity="center_vertical" android:id="@+id/distance" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:text="@string/demo_busline_station_distance"/>
            <TextView android:textSize="@dimen/font_26" android:textColor="@color/f_c_2" android:gravity="right" android:id="@+id/price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/demo_busline_station_price"/>
        </LinearLayout>
        <TextView android:textSize="12dp" android:textColor="@color/f_c_3" android:id="@+id/txtInterval" android:paddingLeft="18dp" android:paddingRight="18dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/route_2dp" android:layout_marginBottom="@dimen/route_3dp" android:text="@string/demo_busline_station_interval"/>
        <ViewStub android:id="@+id/bus_temporary_change_vs" android:layout="@layout/layout_bus_temporary_change" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="35dp"/>
    </LinearLayout>
    <View android:background="@color/bg_ea" android:layout_width="match_parent" android:layout_height="@dimen/route_1px"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ListView android:id="@+id/detail_list" android:focusable="true" android:fadingEdgeLength="0dp" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@drawable/v3_list_bus_bg_selector" android:cacheColorHint="#00000000" android:divider="@null" android:dividerHeight="0dp"/>
        <com.autonavi.minimap.route.common.view.RouteFrameFooterView android:id="@+id/footer" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>
