                <TextView android:textSize="@dimen/font_26" android:textColor="@color/f_c_3" android:paddingRight="@dimen/route_18dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/must_input" android:drawableRight="@drawable/common_litblack_right_arrow" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                <View android:background="@color/gray_lite" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_alignParentBottom="true"/>
