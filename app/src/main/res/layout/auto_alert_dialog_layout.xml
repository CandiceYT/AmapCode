            <TextView android:textSize="13dp" android:textColor="@color/f_c_2" android:id="@+id/sub_title1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/route_record"/>
            <TextView android:textSize="13dp" android:textColor="@color/f_c_2" android:id="@+id/sub_title2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="@string/download_apk" android:layout_below="@+id/sub_title1"/>
