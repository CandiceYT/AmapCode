            <Button android:textSize="@dimen/font_32" android:textColor="@color/alert_dialog_positive_button_color" android:layout_gravity="center_vertical" android:id="@+id/btnRight" android:background="@drawable/basemap_location_button_selector" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="0dp" android:layout_height="match_parent" android:text="高德地图" android:maxLines="2" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
