    <TextView android:textSize="@dimen/font_26" android:textColor="@color/gray" android:gravity="left" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:text="@string/shortcut_can_not_be_modified"/>
</LinearLayout>
