<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:orientation="vertical" android:background="@color/gary_frame" android:layout_width="match_parent" android:layout_height="match_parent">
    <include layout="@layout/title_view_layout"/>
    <RelativeLayout android:id="@+id/search_root" android:background="@drawable/search_input_framebg" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:layout_marginTop="10dp" android:layout_marginRight="9dp">
        <ImageButton android:layout_gravity="center_vertical" android:id="@+id/btn_clear" android:background="@null" android:visibility="gone" android:layout_width="50dp" android:layout_height="wrap_content" android:src="@drawable/search_input_clear_selector" android:layout_alignParentRight="true" android:contentDescription="@null"/>
