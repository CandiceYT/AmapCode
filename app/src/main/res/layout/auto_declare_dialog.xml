<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:orientation="vertical" android:background="@color/gary_frame" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/title_navi" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" layout="@layout/title_view_layout"/>
    <com.autonavi.widget.ui.TitleBar android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" app:title="@string/ali_auto_declare" app:title_style="4"/>
    <LinearLayout android:gravity="bottom" android:layout_gravity="bottom" android:orientation="vertical" android:id="@+id/bottom_btn_layout" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <View android:layout_width="match_parent" android:layout_height="1dp"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/confirm" android:background="@drawable/auto_button_blue_corner_background" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginTop="30dp" android:layout_marginBottom="10dp" android:text="@string/agree" android:layout_weight="1"/>
            <TextView android:textSize="16dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/cancel" android:background="@drawable/bottom_round_corners_gray_auto" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginBottom="12dp" android:text="@string/cancel" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:fillViewport="true" android:layout_above="@+id/bottom_btn_layout" android:layout_below="@+id/title_navi">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RelativeLayout android:layout_gravity="center_horizontal" android:id="@+id/gaode_rl" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="9dp">
                <ImageView android:id="@+id/about_pic" android:padding="5dp" android:layout_width="70dp" android:layout_height="70dp" android:src="@drawable/v3_icon" android:layout_centerVertical="true" android:contentDescription="@null"/>
                <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_toRightOf="@+id/about_pic" android:layout_centerVertical="true">
                    <TextView android:textSize="@dimen/font_36" android:textColor="@color/f_c_2" android:gravity="top" android:id="@+id/about_tv_gaode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/autonavi_app_name_in_route"/>
                    <TextView android:textSize="@dimen/font_26" android:textColor="#898989" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="@string/autonavi_company_name"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="28dp" android:layout_marginRight="20dp">
                    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/ali_connection_declare_01" style="@style/confirm_dialog_text_style"/>
                </RelativeLayout>
                <TextView android:id="@+id/navi_declare_tv2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="15dp" android:layout_marginRight="20dp" android:text="@string/ali_connection_declare_02" style="@style/confirm_dialog_text_style"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
