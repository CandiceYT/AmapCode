                </LinearLayout>
                <TextView android:textColor="#42a5ff" android:id="@+id/more_station_tv" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="..." android:singleLine="true"/>
            </LinearLayout>
            <TextView android:textSize="@dimen/f_s_14" android:textColor="@color/f_c_3" android:ellipsize="end" android:id="@+id/deepinfo" android:background="@drawable/poi_deal_bg" android:paddingLeft="8dp" android:paddingTop="2.5dp" android:paddingRight="8dp" android:paddingBottom="3dp" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/default_margin_8A" android:layout_marginTop="@dimen/default_margin_2A" android:layout_marginRight="@dimen/default_margin_8A" android:text="@string/v4_poi_detail_more_info" android:singleLine="true"/>
        </LinearLayout>
        <View android:id="@+id/cms_divider" android:background="@color/c_3n" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="@dimen/default_margin_8A" android:layout_marginRight="@dimen/default_margin_8A" android:contentDescription="@null"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/down_btn_ll" android:layout_width="match_parent" android:layout_height="48dp" android:baselineAligned="false">
