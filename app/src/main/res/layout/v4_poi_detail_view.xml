                <ImageView android:id="@+id/poi_iv_1" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/default_margin_4A" android:src="@drawable/poi_room" android:scaleType="center" android:singleLine="true" android:contentDescription="@null"/>
                <ImageView android:id="@+id/poi_iv_2" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/default_margin_4A" android:src="@drawable/poi_group" android:scaleType="center" android:singleLine="true" android:contentDescription="@null"/>
                <ImageView android:id="@+id/poi_iv_3" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/default_margin_4A" android:src="@drawable/poi_yikuaiqu_order" android:scaleType="center" android:singleLine="true" android:contentDescription="@null"/>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/rating_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/default_margin_8A" android:layout_marginTop="@dimen/default_margin_2A" android:layout_marginRight="@dimen/default_margin_8A">
                <RatingBar android:layout_gravity="center_vertical" android:id="@+id/rating_bar" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:layout_marginRight="@dimen/default_margin_4A" android:max="50" android:progress="35" android:numStars="5" android:stepSize="0.1" style="@style/RatingBarNew"/>
