                <TextView android:textSize="@dimen/f_s_14" android:textColor="@color/f_c_3" android:ellipsize="marquee" android:layout_gravity="center_vertical" android:id="@+id/distance" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/default_margin_4A" android:text="@string/v4_poi_detail_distance" android:singleLine="true"/>
                <View android:layout_gravity="center_vertical" android:id="@+id/divider" android:background="@color/c_3n" android:visibility="visible" android:layout_width="1px" android:layout_height="15dp" android:layout_marginRight="@dimen/default_margin_4A"/>
                <TextView android:textSize="@dimen/f_s_14" android:textColor="@color/f_c_3" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/text_addr" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/v4_poi_detail_address" android:singleLine="true"/>
                <LinearLayout android:layout_gravity="center_vertical" android:orientation="horizontal" android:id="@+id/super_address_tip" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content">
