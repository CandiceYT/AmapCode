                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/child_station_ll" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/default_margin_4A">
