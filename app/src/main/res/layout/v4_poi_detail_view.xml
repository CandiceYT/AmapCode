            <com.autonavi.map.widget.DrawableCenterTextView android:textSize="@dimen/f_s_14" android:textStyle="bold" android:textColor="@color/f_c_6" android:gravity="center_vertical" android:id="@+id/tv_taxi" android:background="@drawable/v4_common_idle_tap_selector" android:visibility="gone" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/taxi" android:drawableLeft="@drawable/tips_chuzuche" android:drawablePadding="@dimen/default_margin_3A" android:layout_weight="1"/>
            <com.autonavi.map.widget.DrawableCenterTextView android:textSize="@dimen/f_s_14" android:textStyle="bold" android:textColor="@color/f_c_6" android:gravity="center_vertical" android:id="@+id/tv_navi" android:background="@drawable/v4_common_idle_tap_selector" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/button_text_navi" android:drawableLeft="@drawable/tips_navi_new1" android:drawablePadding="@dimen/default_margin_3A" android:layout_weight="1"/>
            <com.autonavi.map.widget.DrawableCenterTextView android:textSize="@dimen/f_s_14" android:textStyle="bold" android:textColor="@color/f_c_6" android:gravity="center_vertical" android:id="@+id/tv_error" android:background="@drawable/v4_common_idle_tap_selector" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/button_text_error" android:drawableLeft="@drawable/funicon_error_tab_new" android:drawablePadding="@dimen/default_margin_3A" android:layout_weight="1"/>
            <com.autonavi.map.widget.DrawableCenterTextView android:textSize="@dimen/f_s_14" android:textStyle="bold" android:textColor="@color/f_c_6" android:gravity="center_vertical" android:id="@+id/tv_indoor" android:background="@drawable/v4_common_idle_tap_selector" android:layout_width="0dp" android:layout_height="match_parent" android:text="@string/indoor_map" android:drawableLeft="@drawable/mbox_btn_indoor_icon_new" android:drawablePadding="@dimen/default_margin_3A" android:layout_weight="1" android:contentDescription="@string/indoor_map"/>
        </LinearLayout>
        <View android:background="@color/c_3n" android:layout_width="match_parent" android:layout_height="1px" android:contentDescription="@null"/>
    </LinearLayout>
    <ImageView android:id="@+id/route_btn" android:background="@drawable/icon_c_bg_b" android:layout_width="78dp" android:layout_height="78dp" android:layout_marginRight="11dp" android:src="@drawable/icon_c35_selector" android:layout_alignParentTop="true" android:layout_alignParentRight="true"/>
</RelativeLayout>
