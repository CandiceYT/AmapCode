        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="0dp" android:layout_marginLeft="@dimen/default_margin_8A" android:layout_marginTop="@dimen/default_margin_8A" android:layout_marginRight="@dimen/default_margin_8A" android:layout_marginBottom="@dimen/default_margin_8A" android:layout_weight="1">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/poi_info" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/default_margin_8A" android:layout_marginRight="88dp">
