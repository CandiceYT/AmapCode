                    <TextView android:textSize="11dp" android:textStyle="bold" android:textColor="@color/font_cb" android:gravity="center_vertical" android:id="@+id/station_txt" android:background="@drawable/tip_station_text_bg" android:paddingLeft="3dp" android:paddingRight="3dp" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="站台"/>
