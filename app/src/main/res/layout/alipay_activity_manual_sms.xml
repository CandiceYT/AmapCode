        </LinearLayout>
    </com.ali.user.mobile.util.ResizeScrollView>
    <com.ali.user.mobile.ui.widget.APTitleBar android:id="@+id/titlebar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true"/>
</RelativeLayout>
