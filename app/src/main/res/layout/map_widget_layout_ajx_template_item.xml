<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:background="@color/transparent" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/widget_item_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <ImageView android:id="@+id/widget_img" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="8dp" android:textColor="#8a000000" android:gravity="center" android:id="@+id/widget_desc" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="功能名称" android:layout_below="@+id/widget_img" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <ImageView android:id="@+id/widget_red_tip" android:visibility="visible" android:layout_width="8dp" android:layout_height="8dp" android:src="@drawable/idle_info" android:scaleType="centerInside" android:layout_alignTop="@+id/widget_item_container" android:layout_alignRight="@+id/widget_item_container" android:contentDescription="@null"/>
    <View android:id="@+id/widget_split_line" android:background="#19000000" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_centerHorizontal="true"/>
</RelativeLayout>
