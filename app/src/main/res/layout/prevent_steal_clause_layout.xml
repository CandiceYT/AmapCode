<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:orientation="vertical" android:background="@color/gary_frame" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/title_navi" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" layout="@layout/title_view_layout"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/layout_bottom" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <TextView android:textSize="16dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/confirm" android:background="@drawable/bottom_round_corners_blue" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginTop="30dp" android:layout_marginBottom="10dp" android:text="@string/agree" android:layout_weight="1"/>
        <TextView android:textSize="16dp" android:textColor="@color/white" android:gravity="center" android:id="@+id/cancel" android:background="@drawable/bottom_round_corners_gray" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="44dp" android:layout_marginBottom="12dp" android:text="@string/cancel" android:layout_weight="1"/>
    </LinearLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/layout_bottom" android:layout_below="@+id/title_navi">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <TextView android:id="@+id/txt_declaration_top" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="10dp" style="@style/confirm_dialog_text_style"/>
            <TextView android:id="@+id/txt_declaration_centre" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="10dp" style="@style/confirm_dialog_text_style"/>
            <TextView android:id="@+id/txt_declaration_bottom" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="10dp" style="@style/confirm_dialog_text_style"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
