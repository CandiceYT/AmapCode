    </RelativeLayout>
    <com.autonavi.minimap.widget.ExGridView android:id="@+id/search_dlg_father_gridview" android:paddingLeft="52dp" android:paddingRight="12dp" android:fadingEdge="none" android:fadingEdgeLength="0dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:listSelector="#00000000" android:cacheColorHint="#00000000" android:horizontalSpacing="4dp" android:verticalSpacing="4dp" android:numColumns="3"/>
    <View android:id="@+id/bottom_driver" android:background="@drawable/board_line_selector" android:duplicateParentState="true" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="52dp"/>
</LinearLayout>
