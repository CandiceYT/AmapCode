        <TextView android:textSize="12dp" android:textStyle="bold" android:textColor="@android:color/holo_red_light" android:gravity="center" android:id="@+id/debug_state" android:layout_width="120dp" android:layout_height="40dp" android:text="vcs state"/>
        <TextView android:textSize="12dp" android:textStyle="bold" android:textColor="@android:color/holo_blue_dark" android:gravity="center" android:id="@+id/debug_msg" android:visibility="gone" android:layout_width="120dp" android:layout_height="40dp" android:text="error msg"/>
    </LinearLayout>
</FrameLayout>
