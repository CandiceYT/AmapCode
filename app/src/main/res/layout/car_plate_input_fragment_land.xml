<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:id="@+id/car_plate_container" android:background="#4d000000" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:id="@+id/dialog_edge" android:background="@drawable/carplate_dialog_bg" android:focusable="true" android:focusableInTouchMode="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="330dp" android:minHeight="200dp" android:layout_centerHorizontal="true">
        <TextView android:textSize="@dimen/f_s_17" android:textColor="@color/f_c_2" android:id="@+id/title_part" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/car_plate_dialog_title"/>
        <RelativeLayout android:orientation="horizontal" android:id="@+id/car_plate_input_area" android:layout_width="match_parent" android:layout_height="40dp" android:layout_marginLeft="16dp" android:layout_marginTop="8dp" android:layout_marginRight="16dp">
            <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/car_plate_input_province_content" android:background="@drawable/navi_button_blue_bg" android:layout_width="33dp" android:layout_height="40dp" android:layout_centerVertical="true">
                <TextView android:textSize="@dimen/f_s_16" android:textColor="@color/f_c_1" android:id="@+id/car_plate_input_province" android:layout_width="wrap_content" android:layout_height="wrap_content" android:drawableRight="@drawable/carplate_input_province_arrow_selector" android:drawablePadding="2dp"/>
            </LinearLayout>
            <com.autonavi.minimap.drive.widget.CarPlateInputFocusView android:id="@+id/car_plate_input_focus_view" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="6dp" android:layout_toRightOf="@+id/car_plate_input_province_content" android:layout_centerVertical="true"/>
        </RelativeLayout>
        <LinearLayout android:orientation="vertical" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:layout_marginBottom="20dp">
            <CheckBox android:textSize="@dimen/f_s_14" android:textColor="@color/f_c_21" android:id="@+id/car_plate_type_tips" android:paddingLeft="0dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null" android:text="@string/car_plate_type_tips_short" android:drawableLeft="@drawable/car_plate_input_type_tip_button" android:drawablePadding="8dp"/>
            <RadioGroup android:orientation="horizontal" android:id="@+id/car_plate_new_energy_radiogroup" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp">
                <RadioButton android:textSize="@dimen/f_s_14" android:textColor="@color/f_c_2" android:id="@+id/pure_electric" android:paddingLeft="0dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:button="@null" android:text="@string/car_plate_type_pure_electric" android:drawableLeft="@drawable/car_plate_input_type_radio_button" android:drawablePadding="8dp"/>
                <RadioButton android:textSize="@dimen/f_s_14" android:textColor="@color/f_c_2" android:id="@+id/plugging_in_electric" android:paddingLeft="0dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:button="@null" android:text="@string/car_plate_type_plugging_in_electric" android:drawableLeft="@drawable/car_plate_input_type_radio_button" android:drawablePadding="8dp"/>
            </RadioGroup>
        </LinearLayout>
        <View android:background="@color/c_2" android:layout_width="match_parent" android:layout_height="0.5dp"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="44dp" android:minHeight="44dp">
            <TextView android:textSize="@dimen/f_s_17" android:textColor="@color/f_c_2" android:gravity="center" android:layout_gravity="center" android:id="@+id/decision_cancel" android:background="@drawable/carplate_dialog_cancel_button_corner" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/car_plate_decision_cancel" android:layout_weight="1"/>
            <View android:layout_gravity="center_horizontal" android:background="@color/c_2" android:layout_width="0.5dp" android:layout_height="match_parent"/>
            <TextView android:textSize="@dimen/f_s_17" android:textColor="@color/f_c_6" android:gravity="center" android:layout_gravity="center" android:id="@+id/decision_confirm" android:background="@drawable/carplate_dialog_confirm_button_corner" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/car_plate_save" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <com.autonavi.minimap.drive.view.NumeralKeyBoardDriveView android:id="@+id/caradd_numeralkeyboard" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true"/>
</RelativeLayout>
