            <View android:background="@color/c_2" android:layout_width="1px" android:layout_height="match_parent"/>
            <Button android:textSize="@dimen/f_s_17" android:textColor="@color/f_c_6" android:layout_gravity="center_vertical" android:id="@+id/save" android:layout_width="0dp" android:layout_height="wrap_content" android:minHeight="44dp" android:text="@string/save" android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
