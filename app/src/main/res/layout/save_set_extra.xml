<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:id="@+id/container" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@drawable/save_point_edit_extra_shape" android:layout_width="270dp" android:layout_height="wrap_content" android:layout_marginTop="86dp" android:layout_centerHorizontal="true">
        <TextView android:textSize="@dimen/f_s_17" android:textColor="@color/f_c_2" android:ellipsize="end" android:gravity="top|center_vertical|center_horizontal|center" android:id="@+id/title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/set_extra_title" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:lineSpacingExtra="4dp"/>
