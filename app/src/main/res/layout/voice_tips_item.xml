<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:layout_width="match_parent" android:layout_height="wrap_content">
    <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="9dp">
        <RelativeLayout android:background="@drawable/bg_voice_map_robot_talk" android:paddingLeft="12dp" android:paddingTop="30dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp">
            <TextView android:textSize="16dp" android:textColor="@color/f_c_3" android:id="@+id/voice_tip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:includeFontPadding="false"/>
            <TextView android:textSize="22dp" android:textColor="@color/f_c_2" android:id="@+id/voice_tips_content_tv" android:paddingBottom="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" android:includeFontPadding="false" android:layout_below="@+id/voice_tip"/>
            <TextView android:textSize="14dp" android:textColor="@color/f_c_4" android:id="@+id/voice_view_more" android:padding="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="更多" android:includeFontPadding="false" android:drawableRight="@drawable/voice_talk_more" android:drawablePadding="5dp" android:layout_alignBaseline="@+id/voice_tips_content_tv" android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <ImageView android:id="@+id/voice_tips_head" android:clickable="false" android:layout_width="40dp" android:layout_height="40dp" android:layout_marginLeft="12dp" android:src="@drawable/voice_robot" android:contentDescription="@string/voice_bot"/>
    </FrameLayout>
</FrameLayout>
