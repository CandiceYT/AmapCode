<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aui="http://schemas.android.com/apk/res/com.alipay.mobile.antui" android:orientation="vertical" android:id="@+id/launch_camera_container" android:background="@color/c_5_b" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:id="@+id/llSamplePicture" android:background="@drawable/sample_picture_dialog_bg" android:layout_width="match_parent" android:layout_height="280dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:weightSum="1" android:layout_centerVertical="true">
            <TextView android:textSize="@dimen/f_s_16" android:textColor="@color/f_c_2" android:layout_gravity="center_horizontal" android:id="@+id/tvSampleTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="@string/dialog_photo_take_example_title"/>
            <ImageView android:id="@+id/ivSamplePicture" android:layout_width="match_parent" android:layout_height="0dp" android:layout_margin="10dp" android:src="#f4f4f4" android:scaleType="centerCrop" android:layout_weight="1"/>
            <TextView android:textSize="@dimen/f_s_13" android:textColor="@color/f_c_4" android:gravity="center_horizontal" android:id="@+id/tvSampleText" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp" android:text="@string/dialog_photo_take_example_content"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/font_36" android:textColor="@color/f_c_3" android:gravity="center" android:id="@+id/caption" android:background="@drawable/bottom_dialog_bg" android:visibility="gone" android:layout_width="match_parent" android:layout_height="46dp" android:text="请上传行驶证蓝本"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/divider_middle_1" android:background="@drawable/bottom_dialog_bg" android:layout_width="match_parent" android:layout_height="wrap_content">
            <View android:background="@color/c_26" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/font_36" android:textColor="@color/f_c_2" android:gravity="center" android:id="@+id/camera_item" android:background="@drawable/bottom_dialog_bg" android:layout_width="match_parent" android:layout_height="56dp" android:text="拍摄"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/divider_middle_2" android:background="@drawable/bottom_dialog_bg" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/gallery_item">
            <View android:background="@color/c_26" android:layout_width="match_parent" android:layout_height="0.5dp" android:layout_marginLeft="20dp" android:layout_marginRight="20dp"/>
        </LinearLayout>
        <TextView android:textSize="@dimen/font_36" android:textColor="@color/f_c_2" android:gravity="center" android:id="@+id/gallery_item" android:background="@color/white" android:layout_width="match_parent" android:layout_height="56dp" android:text="从手机相册选择"/>
        <LinearLayout android:gravity="center" android:id="@+id/cancel_button_view" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:textSize="@dimen/font_36" android:textColor="@color/f_c_3" android:id="@+id/cancel_button" android:background="@drawable/dialog_cancel_btn_bg" android:layout_width="match_parent" android:layout_height="48dp" android:layout_margin="20dp" android:text="@string/cancel"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
